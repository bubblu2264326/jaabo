#include<stdio.h>

struct employee{
   	char name[15],profession[10];
	int phone_no[15],pay_per_hour[5],work_experince[4];
};
int main(){
	struct employee n[100];
	int choice,a,i=0;
	
    printf("1.Customer\n2.Employee\n3.exit\nEnter Your Choice:");
    scanf("%d",&choice);
	if(choice==1){
    	printf("What Service Do you Want");
    	printf("1.electrician\n2.cleaner\n3.plumber\n4.mechanic\n5.carpenter");
    	scanf("%d",&a);
        if(a==1){
        	for(i=0;i<100;i++){
        		if(n[i].profession=="electrician"){
        			printf("name:%s",n[i].name);
        			printf("phone no:%d",n[i].phone_no);
        			printf("pay per hour:%d",n[i].pay_per_hour);
        			printf("work experience:%d",n[i].work_experince);
				}
				else{
				   break;
				}
				
				}
			}
		 else if(a==2){
				for(i=0;i<100;i++){
				 if(n[i].profession=="cleaner"){
					printf("name:%s",n[i].name);
        			printf("phone no:%d",n[i].phone_no);
        			printf("pay per hour:%d",n[i].pay_per_hour);
        			printf("work experience:%d",n[i].work_experince);
				}
				}
			}
			else if(a==3){
			    for(i=0;i<100;i++){
					if(n[i].profession=="plumber"){
					printf("name:%s",n[i].name);
        			printf("phone no:%d",n[i].phone_no);
        			printf("pay per hour:%d",n[i].pay_per_hour);
        			printf("work experience:%d",n[i].work_experince);
				}
			}
			}
			   else if(a==4){
			        for(i=0;i<100;i++){
					 if(n[i].profession=="mechanic"){
					printf("name:%s",n[i].name);
        			printf("phone no:%d",n[i].phone_no);
        			printf("pay per hour:%d",n[i].pay_per_hour);
        			printf("work experience:%d",n[i].work_experince);
				}
				}}
				else if(a==5){
			        for(i=0;i<100;i++){
					 if(n[i].profession=="carpenter"){
					printf("name:%s",n[i].name);
        			printf("phone no:%d",n[i].phone_no);
        			printf("pay per hour:%d",n[i].pay_per_hour);
        			printf("work experience:%d",n[i].work_experince);
				}
				}
				}
				
				
	}
	else if(choice==2){
	  printf("Enter Your Profession name:");
	  scanf("%s",n[i].profession);
	  printf("Enter Your Name:");
	  scanf("%s",n[i].name);
	  printf("Enter Your Phone No:");
	  scanf("%d",&n[i].phone_no);
	  printf("Enter Your Pay Per Hour:");
	  scanf("%d",&n[i].pay_per_hour);
	  printf("Enter Your Experince in months:");
	  scanf("%d",&n[i].work_experince);  
	  i++;
	}
	else{
		printf("Wrong choice");
	}

}
